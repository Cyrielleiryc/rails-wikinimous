<h1 id="article-title"><%= @article.title %>
  <%= link_to edit_article_path(@article) do %>
    <i class="fa-solid fa-pencil"></i>
  <% end %>
  <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this article?"} do %>
    <i class="fa-regular fa-trash-can"></i>
  <% end %>
</h1>
<p><%= @article.content %></p>
